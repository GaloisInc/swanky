                    {% call(scalar, avx2) visit_backends(block=True) %}
                    {% call scalar() %}
                        Aes{{key_size}}KeySchedule::Fixed
                    {% endcall %}
                    {% call avx2() %}
                        {% if encrypt_only %}
                            [
