            {% endcall %}
            {% endcall %}

            {% call(scalar, avx2) fn(
                "encrypt_many",
                {"&self": "Aes" ~ key_size, "blocks": "[U8x16; N]"},
                returns="[U8x16; N]",
                const_args = {"N": "usize"},
                where_array_unrolled_ops=["N"],
                doc_scalar_equiv=False,
                pub=force_scalar_for_test and "super"
